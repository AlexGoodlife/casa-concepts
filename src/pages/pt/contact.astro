---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Vamo-nos conectar!" />

  <ContactUs
    id="form"
    title="Deixe-nos uma mensagem hoje"
    subtitle="É um prazer entrar em contacto"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nome',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensagem',
    }}
    disclaimer={{
      label:
        'Ao submeter este formulário concorda com a recolha da sua informação pessoal',
    }}
    description="Entraremos em contacto o mais rápido possível"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos aqui para ajudar!"
    items={[
      {
        title: 'Telemóvel',
        description: '+351 914142074',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'info@casaconcepts.pt',
        icon: 'tabler:mail',
      },
      {
        title: 'Morada',
        description: 'Rua das Pimenteiras, Edificio Antelius, Loja A Vilamoura,8125-473, Quarteira',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>

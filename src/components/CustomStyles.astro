---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Updated color palette */
    --aw-color-primary: rgb(255, 197, 12); /* #FFC50C */
    --aw-color-secondary: rgb(12, 7, 13);  /* #0C070D */
    --aw-color-accent: rgb(70, 70, 95); /* #767678 */

    --aw-color-text-heading: rgb(12, 7, 13); /* Dark for headings */
    --aw-color-text-default: rgb(35, 35, 35); /* Slightly lighter default text */
    --aw-color-text-muted: rgb(35, 35, 35 / 66%); /* Muted text with transparency */
    --aw-color-bg-page: rgb(255, 255, 255); /* White background */
    --aw-color-bg-muted: rgb(246, 246, 246); /* Subtle light gray for muted elements */

    /* Dark mode */
    --aw-color-bg-page-dark: rgb(12, 7, 13); /* Matches secondary */
    --aw-color-text-heading-dark: rgb(255, 255, 255); /* White for contrast */
    --aw-color-text-default-dark: rgb(200, 200, 200);
    --aw-color-text-muted-dark: rgb(200, 200, 200 / 66%);
    --aw-color-accent-dark: rgb(255, 197, 12); /* Accent stays bright for dark mode */

    ::selection {
      background-color: rgb(255, 197, 12); /* Highlight matches primary */
      color: rgb(12, 7, 13); /* High contrast selection */
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Dark mode colors */
    --aw-color-primary: rgb(255, 197, 12);
    --aw-color-secondary: rgb(12, 7, 13);
    --aw-color-accent: rgb(118, 118, 120);

    --aw-color-text-heading: rgb(255, 255, 255);
    --aw-color-text-default: rgb(200, 200, 200);
    --aw-color-text-muted: rgb(200, 200, 200 / 66%);
    --aw-color-bg-page: rgb(12, 7, 13);
  }
</style>

---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(82, 113, 188); /* #5271BC */
    --aw-color-secondary: rgb(44, 70, 135); /* #2C4687 */
    --aw-color-accent: rgb(174, 198, 230); /* #AEC6E6 */

    --aw-color-text-heading: rgb(82, 113, 188); /* #5271BC */
    --aw-color-text-default: rgb(44, 70, 135); /* #2C4687 */
    --aw-color-text-muted: rgba(44, 70, 135, 0.66); /* Slightly transparent muted */

    --aw-color-bg-page: rgb(233, 242, 251); /* #E9F2FB */
    --aw-color-bg-muted: rgb(206, 225, 248); /* #CEE1F8 */

    /* Dark mode */
    --aw-color-bg-page-dark: rgb(12, 18, 32); /* Custom dark background */
    --aw-color-text-heading-dark: rgb(233, 242, 251); /* Light text */
    --aw-color-text-default-dark: rgb(206, 225, 248);
    --aw-color-text-muted-dark: rgba(206, 225, 248, 0.66);
    --aw-color-accent-dark: rgb(174, 198, 230); /* Accent remains soft */

    ::selection {
      background-color: rgb(82, 113, 188); /* Highlight with primary */
      color: rgb(233, 242, 251); /* Light text on highlight */
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(82, 113, 188);
    --aw-color-secondary: rgb(44, 70, 135);
    --aw-color-accent: rgb(174, 198, 230);

    --aw-color-text-heading: rgb(233, 242, 251);
    --aw-color-text-default: rgb(206, 225, 248);
    --aw-color-text-muted: rgba(206, 225, 248, 0.66);
    --aw-color-bg-page: rgb(12, 18, 32);
  }
</style>
